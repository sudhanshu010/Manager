<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frame3"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.FormFragment3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:textColorHint="#757474"
            app:boxStrokeColor="@color/colorPrimary">

            <EditText
                android:id="@+id/installation_date"
                style="@style/modifiedEditText1"
                android:drawableLeft="@drawable/ic_calendar"
                android:drawableTint="#a3a3a3"
                android:drawablePadding="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/imprima"
                android:hint="Enter Date of Installation"
                android:background="@android:color/transparent"
                android:maxLines="1"
                android:textColor="#757474"
                android:textColorHint="#000" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#a3a3a3"
                android:layout_marginTop="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:textColorHint="#757474"
            app:boxStrokeColor="@color/colorPrimary">

            <EditText
                android:id="@+id/price"
                style="@style/modifiedEditText1"
                android:drawableLeft="@drawable/ic_price"
                android:drawablePadding="20dp"
                android:drawableTint="#a3a3a3"
                android:textStyle="bold"
                android:inputType="number"
                android:background="@android:color/transparent"
                android:fontFamily="@font/imprima"
                android:hint="Enter Machine Price"
                android:maxLines="1"
                android:textColor="#757474"
                android:textColorHint="#000" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#a3a3a3"
                android:layout_marginTop="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:textColorHint="#757474"
            app:boxStrokeColor="@color/colorPrimary">

            <EditText
                android:id="@+id/life"
                style="@style/modifiedEditText1"
                android:drawableLeft="@drawable/ic_expected_life"
                android:drawableTint="#a3a3a3"
                android:drawablePadding="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/imprima"
                android:inputType="number"
                android:hint="Enter Expected Life of Machine"
                android:background="@android:color/transparent"
                android:maxLines="1"
                android:textColor="#757474"
                android:textColorHint="#000" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#a3a3a3"
                android:layout_marginTop="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:textColorHint="#757474"
            app:boxStrokeColor="@color/colorPrimary">

            <EditText
                android:id="@+id/scrap_value"
                style="@style/modifiedEditText1"
                android:drawableLeft="@drawable/ic_price"
                android:drawablePadding="20dp"
                android:drawableTint="#a3a3a3"
                android:fontFamily="@font/imprima"
                android:textStyle="bold"
                android:inputType="number"
                android:background="@android:color/transparent"
                android:hint="Enter Expected Scrap Value"
                android:maxLines="1"
                android:textColor="#757474"
                android:textColorHint="#000" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#a3a3a3"
                android:layout_marginTop="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</FrameLayout>