<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".EditProfileActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EAE4E4"
        android:elevation="5dp"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/close_btn"
            android:layout_marginTop="7dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_baseline_close_24"
            android:tint="#000"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="20dp"

            android:layout_toStartOf="@+id/save_button"
            android:layout_toEndOf="@id/close_btn"
            android:fontFamily="@font/imprima"
            android:text="Edit Profile"
            android:textSize="20sp"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="@dimen/padding_10"
            android:src="@drawable/ic_baseline_done_24"
            android:id="@+id/save_button"
            android:layout_alignParentRight="true"
            android:tint="#2196F3"
            android:layout_gravity="center_vertical"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:padding="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilepic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/profilepicdemo1"
                app:civ_border_color="#000"
                app:civ_circle_background_color="#000"
                app:civ_fill_color="#a3a3a3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_camera_alt_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/profilepic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <com.google.android.material.textfield.TextInputLayout

        android:layout_height="wrap_content"

        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/loginViewsMargin"
        android:textColorHint="#757474"
        app:boxStrokeColor="@color/colorPrimary">
        <EditText
            android:id="@+id/edit_profile_name"
            style="@style/modifiedEditText"
            android:hint="Name"
            android:fontFamily="@font/imprima"
            android:background="@android:color/transparent"
            android:textColorHint="#000"
            android:maxLines="1"
            android:textSize="16sp"
            android:drawableTint="#a3a3a3"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_user"
            android:textColor="#757474"
            android:drawablePadding="20dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#a3a3a3"
            android:layout_marginTop="10dp"
            />
    </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout

            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:textColorHint="#757474"
            app:boxStrokeColor="@color/colorPrimary">
            <EditText
                android:id="@+id/edit_profile_phone"
                style="@style/modifiedEditText"
                android:hint="Phone "
                android:fontFamily="@font/imprima"
                android:background="@android:color/transparent"
                android:textColorHint="#000"
                android:maxLines="1"
                android:textSize="16sp"
                android:drawableTint="#a3a3a3"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_call_black_24dp"
                android:textColor="#757474"
                android:drawablePadding="20dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#a3a3a3"
                android:layout_marginTop="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:textColorHint="#757474"
            app:boxStrokeColor="@color/colorPrimary">
            <EditText
                android:id="@+id/staff_number"
                style="@style/modifiedEditText"
                android:hint="Staff Number "
                android:fontFamily="@font/imprima"
                android:background="@android:color/transparent"
                android:textColorHint="#000"
                android:maxLines="1"
                android:textSize="16sp"
                android:drawableTint="#a3a3a3"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_staff_number1"
                android:textColor="#757474"
                android:drawablePadding="15dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#a3a3a3"
                android:layout_marginTop="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout

            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:textColorHint="#757474"
            app:boxStrokeColor="@color/colorPrimary">
            <EditText
                android:id="@+id/job_title"
                style="@style/modifiedEditText"
                android:hint="Job Title"
                android:fontFamily="@font/imprima"
                android:background="@android:color/transparent"
                android:textColorHint="#000"
                android:maxLines="1"
                android:textSize="16sp"
                android:drawableTint="#a3a3a3"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_job_title1"
                android:textColor="#757474"
                android:drawablePadding="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#a3a3a3"
                android:layout_marginTop="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:textColorHint="#757474"
            app:boxStrokeColor="@color/colorPrimary">
            <EditText
                android:id="@+id/department"
                style="@style/modifiedEditText"
                android:hint="Department"
                android:fontFamily="@font/imprima"
                android:background="@android:color/transparent"
                android:textColorHint="#000"
                android:maxLines="1"
                android:textSize="16sp"
                android:drawableTint="#a3a3a3"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_department1"
                android:textColor="#757474"
                android:drawablePadding="20dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#a3a3a3"
                android:layout_marginTop="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:textColorHint="#757474"
            app:boxStrokeColor="@color/colorPrimary">
            <EditText
                android:id="@+id/work_address"
                style="@style/modifiedEditText"
                android:hint="Work Address"
                android:fontFamily="@font/imprima"
                android:background="@android:color/transparent"
                android:textColorHint="#000"
                android:maxLines="1"
                android:textSize="16sp"
                android:drawableTint="#a3a3a3"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_address1"
                android:textColor="#757474"
                android:drawablePadding="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#a3a3a3"
                android:layout_marginTop="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>