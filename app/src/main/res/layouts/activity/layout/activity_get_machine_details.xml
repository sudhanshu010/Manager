        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Machine Specific Details:"
            android:fontFamily="@font/imprima"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textColor="#6699cc"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_round_corner"
            android:backgroundTint="@color/list_color_7">
            <LinearLayout
                android:id="@+id/comp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Company:"
                    android:fontFamily="@font/imprima"
                    android:textColor="#F5474747"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/company_name"
                    android:layout_width="fill_parent"

                    android:layout_height="wrap_content"
                    android:fontFamily="@font/imprima"
                    android:textColor="#F5474747"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/imprima"
                        android:text="Machine Type:"
                        android:textColor="#F5474747"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/machine_type"
                        android:layout_width="fill_parent"

                        android:layout_height="wrap_content"
                        android:fontFamily="@font/imprima"
                        android:textColor="#F5474747"
                        android:layout_marginLeft="10dp"
                        />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/modelNumber"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/imprima"
                    android:text="Model Number:"
                    android:textColor="#F5474747"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/machineModelNumber"
                    android:layout_width="fill_parent"

                    android:layout_height="wrap_content"
                    android:fontFamily="@font/imprima"
                    android:textColor="#F5474747"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/price_ll"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/imprima"
                    android:text="Price:"
                    android:textColor="#F5474747"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/imprima"
                    android:textColor="#F5474747"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Machine Basic Details:"
            android:fontFamily="@font/imprima"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#6699cc"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:background="@drawable/btn_round_corner"
            android:backgroundTint="#D4CDF4">
            <LinearLayout
                android:id="@+id/department"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textItem2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Department:"
                    android:fontFamily="@font/imprima"
                    android:textColor="#F5474747"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/machineDetailsDepartment"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/imprima"
                    android:textColor="#F5474747"
                    android:layout_marginLeft="10dp"
                    />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/serviceTime"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textItem3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service Time:"
                    android:fontFamily="@font/imprima"
                    android:textColor="#F5474747"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/machineDetailsServiceTime"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/imprima"
                    android:textColor="#F5474747"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/installation_date"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textItem4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Installation:"
                    android:fontFamily="@font/imprima"
                    android:textColor="#F5474747"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/machineDetailsInstallationDate"
                    android:layout_width="fill_parent"

                    android:layout_height="wrap_content"
                    android:fontFamily="@font/imprima"
                    android:textColor="#F5474747"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/generator"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textItem5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Generated By:"
                    android:fontFamily="@font/imprima"
                    android:textColor="#F5474747"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/generator_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/imprima"
                    android:textColor="#F5474747"
                    android:layout_marginLeft="10dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/serialNumber"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textItem1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/imprima"
                    android:text="Serial Number:"
                    android:textColor="#F5474747"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/machineDetailsSerialNo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/imprima"
                    android:textColor="#F5474747" />
            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="#abcdef"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="5dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:background="@android:color/transparent"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:text="Age :  "
                        android:fontFamily="@font/imprima"
                        android:textSize="16dp"
                        />
                    <TextView
                        android:id="@+id/AdvanceAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/imprima"
                        android:textSize="16dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Life Completed :  "
                        android:fontFamily="@font/imprima"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp"
                        />
                    <TextView
                        android:id="@+id/AdvanceLifeCompleted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:text=""
                        android:fontFamily="@font/imprima"
                        android:textSize="16dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cost Incurred :  "
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/imprima"
                        android:textSize="16dp"
                        />
                    <TextView
                        android:id="@+id/AdvanceCostIncurred"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:text=""
                        android:fontFamily="@font/imprima"
                        android:textSize="16dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next Service Date :  "
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/imprima"
                        android:textSize="16dp"
                        />
                    <TextView
                        android:id="@+id/AdvanceNextServiceDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/imprima"
                        android:textSize="16dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Services Count :  "
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/imprima"
                        android:textSize="16dp"
                        />
                    <TextView
                        android:id="@+id/AdvanceServiceCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/imprima"
                        android:textSize="16dp"
                        />
                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Statistics:"
                android:textStyle="bold"
                android:textColor="#5B9FE3"
                android:textSize="18sp"
                />




        </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:background="@drawable/btn_round_corner"
           android:backgroundTint="@color/list_color_11"
           android:layout_marginTop="10dp"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:layout_marginBottom="20dp"
           >
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_margin="20dp"
               >
               <com.example.manager.CircleDisplay
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:layout_gravity="center_horizontal"
                   android:id="@+id/circle_display1"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Life Completed"
                   android:layout_gravity="center_horizontal"
                   android:textSize="17sp"
                   android:fontFamily="@font/imprima"
                   android:textStyle="bold"
                   />
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_margin="20dp"
               >
               <com.example.manager.CircleDisplay
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:layout_gravity="center_horizontal"
                   android:id="@+id/circle_display2"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Cost Incurred \n v/s Buying Cost"
                   android:layout_gravity="center_horizontal"
                   android:textSize="17sp"
                   android:textAlignment="center"
                   android:fontFamily="@font/imprima"
                   android:textStyle="bold"
                   />
           </LinearLayout>

       </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="5dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="Cost vs Service Period"
                    android:fontFamily="@font/imprima"
                    android:textSize="20sp"
                    android:textColor="#2ea6aa"
                    android:textFontWeight="700"

                    />

                <com.github.mikephil.charting.charts.BarChart
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/barChart"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Machine History"
                    android:fontFamily="@font/imprima"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#6699cc"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show All"
                    android:id="@+id/show_history"
                    android:textColor="#F60000"
                    android:fontFamily="@font/imprima"
                    android:textAlignment="viewEnd"
                    android:layout_marginEnd="10dp"
                    android:textSize="16sp"
                    />

            </LinearLayout>
            <ScrollView
                android:id="@+id/scrollViewHistory"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="5dp"
                >

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:id="@+id/machine_history_rv" />

            </ScrollView>
            <TextView
                android:id="@+id/xyz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Records Found"
                android:textColor="#000"
                android:fontFamily="@font/imprima"

                android:visibility="gone"
                android:layout_margin="10dp"
                />
        </LinearLayout>



        <Button
            android:id="@+id/generateComplaint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate Complaint"
            android:layout_margin="20dp"
            android:textColor="#fff"
            android:background="@drawable/btn_round_corner"
            android:backgroundTint="#FF4F5A"
            android:padding="5dp"

            />

    </LinearLayout>

      </LinearLayout>


  </androidx.core.widget.NestedScrollView>

</LinearLayout>














