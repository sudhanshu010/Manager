<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GenerateQRActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:id="@+id/Enter_details"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageviewqr"
                android:src="@drawable/ic_input"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="25dp"
                ></ImageView>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/enter_details_text"
                android:text="Enter Machine Details"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>
        <View style="@style/DetailsView"
            android:background="#979696"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearlayoutimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Enter_details"
        android:layout_alignBottom="@+id/linearlayout1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="44dp">

        <ImageView
            android:id="@+id/qrcode"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_centerInParent="true" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/aqwesd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Enter_details"

        android:layout_marginStart="15dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical"
        tools:ignore="UnknownId">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/serialNumberll"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/ic_serial_number"
                android:layout_gravity="center_vertical">

            </ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter Serial Number"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    >

                </TextView>

                <EditText
                    android:id="@+id/serialNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Type here..."
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/departmentll"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/ic_department"
                android:layout_gravity="center_vertical">

            </ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter Department"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    >

                </TextView>
                <EditText
                    android:id="@+id/department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="Type here..." />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/serviceTimell"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/ic_servicetime"
                android:layout_gravity="center_vertical">

            </ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter Service Time"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    >

                </TextView>
                <EditText
                    android:id="@+id/serviceTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="Type here..." />
            </LinearLayout>

        </LinearLayout>







        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_date_of_installation">

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/installation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Installation"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/installationdate123"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select"
                    android:textColor="#F52323"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="3dp"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aqwesd"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/save"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:gravity="center"
            style="@style/loginButton"
            android:paddingRight="10dp"
            android:text="save" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aqwesd"
        android:layout_marginTop="20dp"
        android:id="@+id/linearlayout1"
        android:gravity="center">

        <Button
            android:id="@+id/generateQRButton"
            android:layout_alignParentEnd="true"
            android:text="Generate"
            style="@style/loginButton"/>
    </LinearLayout>


</RelativeLayout>