<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frame2"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.FormFragment2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:padding="20dp">

        <com.google.android.material.textfield.TextInputLayout

            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:textColorHint="#757474"
            app:boxStrokeColor="#2C2C2C">

            <EditText
                android:id="@+id/serialNumber"
                style="@style/modifiedEditText1"
                android:hint="Enter Serial Number"
                android:drawableTint="#a3a3a3"
                android:textStyle="bold"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="#757474"
                android:fontFamily="@font/imprima"
                android:drawableLeft="@drawable/ic_serial_number1"
                android:background="@android:color/transparent"
                android:drawablePadding="20dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#a3a3a3"
                android:layout_marginTop="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:textColorHint="#757474"
            app:boxStrokeColor="#2C2C2C">

            <EditText
                android:id="@+id/company"
                style="@style/modifiedEditText1"
                android:hint="Enter Company"
                android:inputType="textEmailAddress"
                android:textColor="#757474"
                android:fontFamily="@font/imprima"
                android:drawableTint="#a3a3a3"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_company"
                android:drawablePadding="20dp"
                android:background="@android:color/transparent"
                android:maxLines="1" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#a3a3a3"
                android:layout_marginTop="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout

            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:textColorHint="#757474"
            app:boxStrokeColor="#2C2C2C">

            <EditText
                android:id="@+id/model_number"
                style="@style/modifiedEditText1"
                android:hint="Enter Model Number"
                android:textColor="#757474"
                android:drawableTint="#a3a3a3"
                android:textStyle="bold"
                android:fontFamily="@font/imprima"
                android:drawableLeft="@drawable/ic_model_number"
                android:background="@android:color/transparent"
                android:drawablePadding="20dp"
                android:maxLines="1" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#a3a3a3"
                android:layout_marginTop="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout

            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:textColorHint="#757474"
            app:boxStrokeColor="#2C2C2C">

            <EditText
                android:id="@+id/serviceTime"
                style="@style/modifiedEditText1"
                android:hint="Enter Service Time (In Months)"
                android:inputType="numberDecimal"
                android:drawableLeft="@drawable/ic_service_time1"
                android:drawablePadding="20dp"
                android:drawableTint="#a3a3a3"
                android:textStyle="bold"
                android:textColor="#757474"
                android:fontFamily="@font/imprima"
                android:background="@android:color/transparent"
                android:maxLines="1" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#a3a3a3"
                android:layout_marginTop="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</FrameLayout>