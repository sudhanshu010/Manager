<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/background5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="1dp"
            android:layout_gravity="center"
            android:src="@drawable/scan_logo">

        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/imprima"
            android:layout_marginTop="20dp">

        </TextView>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Details"
                android:paddingStart="15dp"
                android:textSize="20sp"
                >
            </TextView>

            <ImageView
                android:id="@+id/image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_expand_more"
                android:layout_marginStart="5dp"
                >
            </ImageView>
        </LinearLayout>

        <com.github.aakira.expandablelayout.ExpandableWeightLayout
            android:id="@+id/expandableLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            app:ael_duration="1000"
            app:ael_interpolator="anticipateOvershoot">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="15dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputName"
                    style="@style/parent"
                    android:layout_marginTop="15dp">

                    <EditText
                        android:id="@+id/editTextName"
                        style="@style/modifiedEditText"
                        android:drawableLeft="@drawable/ic_user"
                        android:drawablePadding="@dimen/padding_10"
                        android:drawableTint="#a3a3a3"
                        android:hint="Name"
                        android:inputType="textPersonName"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputEmail"
                    style="@style/parent"
                    android:layout_marginTop="15dp">

                    <EditText
                        android:id="@+id/editTextEmail"
                        style="@style/modifiedEditText"
                        android:drawableLeft="@drawable/ic_baseline_email_24"
                        android:drawablePadding="@dimen/padding_10"
                        android:drawableTint="#a3a3a3"
                        android:hint="@string/login_email_hint"
                        android:inputType="textEmailAddress"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputPassword"
                    style="@style/parent"
                    android:layout_marginTop="15dp">

                    <EditText
                        android:id="@+id/editTextPassword"
                        style="@style/modifiedEditText"
                        android:hint="@string/login_password_hint"
                        android:drawableLeft="@drawable/ic_password1"
                        android:drawablePadding="@dimen/padding_10"
                        android:drawableTint="#a3a3a3"
                        android:inputType="textPassword"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </com.github.aakira.expandablelayout.ExpandableWeightLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Work Details"
                android:paddingStart="15dp"
                android:textSize="20sp"
                >
            </TextView>

            <ImageView
                android:id="@+id/image1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_expand_more"
                android:layout_marginStart="5dp"
                >
            </ImageView>
        </LinearLayout>

        <com.github.aakira.expandablelayout.ExpandableWeightLayout
            android:id="@+id/expandableLayout1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            app:ael_duration="1000"
            app:ael_interpolator="anticipateOvershoot">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="15dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputName1"
                    style="@style/parent"
                    android:layout_marginTop="5dp">

                    <EditText
                        android:id="@+id/editTextName1"
                        style="@style/modifiedEditText"
                        android:drawableLeft="@drawable/ic_staff_number1"
                        android:drawablePadding="@dimen/padding_10"
                        android:drawableTint="#a3a3a3"
                        android:hint="Employee ID"
                        android:inputType="textPersonName"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputEmail1"
                    style="@style/parent"
                    android:layout_marginTop="5dp">

                    <EditText
                        android:id="@+id/editTextEmail1"
                        style="@style/modifiedEditText"
                        android:hint="Department"
                        android:drawableLeft="@drawable/ic_department1"
                        android:drawablePadding="@dimen/padding_10"
                        android:drawableTint="#a3a3a3"
                        android:inputType="textPersonName"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputPassword1"
                    style="@style/parent"
                    android:layout_marginTop="5dp">

                    <EditText
                        android:id="@+id/editTextPassword1"
                        style="@style/modifiedEditText"
                        android:drawableLeft="@drawable/ic_job_title1"
                        android:drawablePadding="@dimen/padding_10"
                        android:drawableTint="#a3a3a3"
                        android:hint="Designation"
                        android:inputType="textPassword"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputAddress"
                    style="@style/parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    >
                   <ScrollView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       >
                    <TextView
                        android:id="@+id/editTextAddress"
                        style="@style/modifiedEditText"
                        android:drawableLeft="@drawable/ic_baseline_location_on_24"
                        android:drawablePadding="@dimen/padding_10"
                        android:drawableTint="#03A9F4"
                        android:text="Select Address From Map"
                        android:textSize="15sp"
                        android:textColor="#03A9F4"
                        />
                   </ScrollView>
                </com.google.android.material.textfield.TextInputLayout>



            </LinearLayout>

        </com.github.aakira.expandablelayout.ExpandableWeightLayout>

        <Button
            android:id="@+id/registerButton1"
            style="@style/registerButton"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Register" />

        <TextView
            style="@style/parent"
            android:layout_marginTop="10dp"
            android:onClick="onLoginClick"
            android:text="Already have an account?"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />



    </LinearLayout>



</LinearLayout>